rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Função para verificar se o usuário é admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "admin@praiativa.com";
    }
    
    // Regras globais
    match /{document=**} {
      // Leitura permitida para todos
      allow read: if true;
      // Escrita permitida apenas para admin
      allow write: if isAdmin();
    }
    
    // Usuários podem escrever em seus próprios documentos
    match /users/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permitir leitura pública para algumas coleções
    match /activities/{activityId} {
      allow read: if true;
    }
    
    match /instructors/{instructorId} {
      allow read: if true;
    }
  }
} 